{% extends 'admin.html.twig' %}

{% block title %}Ajouter un Utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {{ form_start(form_user) }}
            {{ form_errors(form_user) }}
            <h2 class="p-2"> Informations importantes :</h2>
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-6 mt-2">
                    {{ form_row(form_user.surname) }}
                </div>
                <div class="col-12 col-sm-6 col-lg-6 mt-2">
                    {{ form_row(form_user.name) }}
                </div>
                <div class="col-12 mt-2">
                    {{ form_row(form_user.email) }}
                </div>
                <div class="col-12 mt-2">
                    {{ form_row(form_user.roles) }}
                </div>
                <div class="col-12 mt-2">
                    {{ form_row(form_user.created_at) }}
                </div>
            </div>

            <div class="p-2" align="center">
                <input type="submit" value="Ajouter l'utilisateur" class="btn btn-primary">
            </div>


            {{ form_end(form_user) }}
        </div>
    </div>

{% endblock %}
