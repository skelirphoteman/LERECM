<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}L.E.R.E.C.M{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}

            {{ encore_entry_link_tags('base') }}
            {{ encore_entry_link_tags('general') }}
        {% endblock %}

        {% block javascript %}
            {{ encore_entry_script_tags('basejs') }}
        {% endblock %}
        <meta name="viewport" content="width=device-width, initial-scale=1">

    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('core') }}">LERECM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_login') }}">Espace Entreprise</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('client_login') }}">Espace client</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="p-3">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>

    <section class="container p-5">
        {% block body %}{% endblock %}
    </section>
    {% block javascripts %}
        {{ encore_entry_script_tags('basejs') }}
    {% endblock %}
    </body>
</html>
