{% extends 'base.html.twig' %}

{% block title %}Reinitialiser son mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <form method="post">
                <div class="form-group">
                    <label for="password">Rentrez votre nouveau mot de passe : </label>
                    <input type="password" name="password" required>
                    <label for="password_second">Confirmez votre nouveau mot de passe : </label>
                    <input type="password" name="password_second" required>
                    <input type="submit" value="Reinitialiser mon mot de passe" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
{% endblock %}
